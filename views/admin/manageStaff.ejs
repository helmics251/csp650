<!-- end navbar-->

<main class="content">
<% if (messages.alert) { %>
  <script>
    alert("<%= messages.alert %>");
  </script>
<% } %>
  <section>
    <!-- Table  -->
    <div class="container mt-5 mb-5 ">
      <div class="row">
        <div class="col-md-6">
          <h2>Manage Staff</h2>
        </div>
        <div class="col-md-6 d-flex justify-content-end">
          <button class="btn btn-primary mb-2" id="addStaffBtn"  data-toggle="modal" data-target="#addStaffModal"><i class="fas fa-user-plus"></i> Add Staff</button>
        </div>
      </div>
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover" id="manageStaffTable">
          <thead class="thead-dark">
            <tr>
              <th>#</th>
              <th>Staff ID</th>
              <th>Username</th>
              <th>Email</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody id="userTableBody">
            <% let counter = 1; %>
            <% staffData.forEach(staff => { %>
              <tr>
                <td><%= counter %></td>
                <td><%= staff.staffId %></td>
                <td><%= staff.username %></td>
                <td><%= staff.email %></td>
                <td>
                  <!-- edit button -->
                  <button 
                    data-toggle="modal" 
                    data-staffid="<%= staff.staffId %>"
                    data-username="<%= staff.username %>" 
                    data-target="#editModal" 
                    class="btn btn-primary btn-sm">
                    <i class="fas fa-edit"></i> 
                    Edit
                  </button>
                
                  <!-- reset password button -->
                  <button 
                    data-toggle="modal" 
                    data-staffid="<%= staff.staffId %>" 
                    data-username="<%= staff.username %>" 
                    data-email="<%= staff.email %>"
                    data-target="#resetModal" 
                    class="btn btn-warning btn-sm">
                    <i class="fas fa-sync-alt"></i> 
                    Reset
                  </button>
                
                  <!-- delete button -->
                  <button 
                    data-toggle="modal" 
                    data-staffid="<%= staff.staffId %>" 
                    data-username="<%= staff.username %>" 
                    data-target="#deleteModal" 
                    class="btn btn-danger btn-sm">
                    <i class="fas fa-trash-alt"></i> 
                    Delete
                  </button>
                </td>
              </tr>
              <% counter++; %>
            <% }) %>
          </tbody>
        </table>
      </div>

      <!-- Pagination Controls -->
      <nav  aria-label="Page navigation example">
          <ul class="pagination justify-content-end">
              <!-- Pagination Links will be dynamically added here -->
          </ul>
      </nav>
    </div>


    <!-- Modal for Adding Staff -->
